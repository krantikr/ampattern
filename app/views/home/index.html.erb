<div class="row">
  <div class="col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-newspaper-o"></i> Placement Papers </h3>
      </div>
      <div class="panel-body">
        <div class="col-sm-6">
          <div class="list-group">
            <%= link_to 'IBM Questions', company_path(company_name: 'IBM'), class: "list-group-item" %>
            <%= link_to 'TCS Questions', company_path(company_name: 'TCS'), class: "list-group-item" %>
            <%= link_to 'CTS Questions', company_path(company_name: 'CTS'), class: "list-group-item" %>
            <%= link_to 'HCL Questions', company_path(company_name: 'HCL'), class: "list-group-item" %>
            <%= link_to 'IGate Questions', company_path(company_name: 'IGate'), class: "list-group-item" %>
            <%= link_to 'Wipro Questions', company_path(company_name: 'Wipro'), class: "list-group-item" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="list-group">
            <%= link_to 'Genpact Questions', company_path(company_name: 'Genpact'), class: "list-group-item" %>
            <%= link_to 'Huawei Questions', company_path(company_name: 'Huawei'), class: "list-group-item" %>
            <%= link_to 'Infosys Questions', company_path(company_name: 'Infosys'), class: "list-group-item" %>
            <%= link_to 'Accenture Questions', company_path(company_name: 'Accenture'), class: "list-group-item" %>
            <%= link_to 'Capgemini Questions', company_path(company_name: 'Capgemini'), class: "list-group-item" %>
            <%= link_to 'Hexaware Questions', company_path(company_name: 'Hexaware'), class: "list-group-item" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-plus-square-o"></i> Add Questions </h3>
      </div>
      <div class="panel-body field-right" style="font-size:12px">
        <%= form_tag(new_admin_question_path, {:method => :get}) do %>
        <div>
          <%= label_tag(:question, "Question") %>
          <%= text_area_tag(:question,'', :style => 'width: 96%; resize: vertical; height: 40px;') %>
        </div>
        <div>
          <%= label_tag(:option_a, "Option A") %>
          <%= text_field_tag(:option_a) %>
        </div>
        <div>
          <%= label_tag(:option_b, "Option B") %>
          <%= text_field_tag(:option_b) %>
        </div>
        <div>
          <%= label_tag(:option_c, "Option C") %>
          <%= text_field_tag(:option_c) %>
        </div>
        <div>
          <%= label_tag(:option_d, "Option D") %>
          <%= text_field_tag(:option_d) %>
        </div>
        <div>
          <%= label_tag(:answer, "Answer", style: "width:56px") %>
          <%= text_field_tag(:answer) %>
        </div>
        <div>
          <%= label_tag(:campony, "Company Name" ) %>
          <%= select_tag(:campony, options_for_select(@company_names.collect{ |c| [c.name, c.id]})) %>
        </div>
        <div>
          <%= label_tag(:type, "Question Type") %>
          <%= select_tag(:type, options_for_select(@question_types.collect{ |q| [q.question_type, q.id]})) %>
        </div>
        <%= submit_tag 'Save' %>
      <% end %>
      </div>
    </div>
  </div>
</div>
<!-- /.row -->