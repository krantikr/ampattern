<div class="row">
  <h2>Forgot your password?</h2>
  <p class="header-line" style="width: 275px;"></p>
</div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <% if devise_error_messages!.present? %>
    <div class="alert alert-danger1 fade in">
      <a class="close" title="close" aria-label="close" data-dismiss="alert" href="#">Ã—</a>
      <%= devise_error_messages! %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions" style="margin-top: 20px;">
    <%= f.submit "Send me reset password instructions", class:'save-btn' %>
  </div>
<% end %>

