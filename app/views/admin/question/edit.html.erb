<div class="row">
  <div class="col-lg-12">
    <div class="top-25">
      <%= form_tag(admin_question_path, {:method => :PATCH}) do %>
        <div>
          <%= label_tag(:question, "Question") %>
          <%= text_area_tag(:question, @question.question) %>
        </div>
        <div>
          <%= label_tag(:option_a, "Option A") %>
          <%= text_field_tag(:option_a, @question.option1) %>
        </div>
        <div>
          <%= label_tag(:option_b, "Option B") %>
          <%= text_field_tag(:option_b, @question.option2) %>
        </div>
        <div>
          <%= label_tag(:option_c, "Option C") %>
          <%= text_field_tag(:option_c, @question.option3) %>
        </div>
        <div>
          <%= label_tag(:option_d, "Option D") %>
          <%= text_field_tag(:option_d, @question.option4) %>
        </div>
        <div>
          <%= label_tag(:answer, "Answer") %>
          <%= text_field_tag(:answer, @question.answer) %>
        </div>
        <div>
          <%= label_tag(:campony, "Company Name" ) %>
          <%= select_tag(:campony, options_for_select(@company_names.collect{ |c| [c.name, c.id]})) %>
        </div>
        <div>
          <%= label_tag(:type, "Question Type") %>
          <%= select_tag(:type, options_for_select(@question_types.collect{ |q| [q.question_type, q.id]})) %>
        </div>
        <%= submit_tag 'Save' %>
      <% end %>
    </div>
  </div>
</div>