<div class="row">
  <h2><%= params[:ques_type] %></h2>
  <p class="header-line"></p>
</div>
<div class="alert alert-success">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  <strong>Congratulations!</strong> Right Answer.
</div>
<div class="alert alert-danger">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  <strong>Oops!</strong> Wrong Answer.
</div>
<% @questions.each do |question| %>
  <div class="row">
    <div class="col-sm-12">
      <div>
        <p><%= question.question %></p>
      </div>
      <div>
        <div class="col-sm-6">
          <span style="position: absolute; padding: 1px;"></span>
          <p class="question-radio" data-option="<%= question.option1 %>" data-id="<%= question.id %>"><input type="radio" name="option" style="margin-right:5px;" /><%= question.option1 %></p>
        </div>
        <div class="col-sm-6">
          <span style="position: absolute; padding: 1px;"></span>
          <p class="question-radio" data-option="<%= question.option2 %>" data-id="<%= question.id %>"><input type="radio" name="option" style="margin-right:5px;" /><%= question.option2 %></p>
        </div>
        <div class="col-sm-6">
          <span style="position: absolute; padding: 1px;"></span>
          <p class="question-radio" data-option="<%= question.option3 %>" data-id="<%= question.id %>"><input type="radio" name="option" style="margin-right:5px;" /><%= question.option3 %></p>
        </div>
        <div class="col-sm-6">
          <span style="position: absolute; padding: 1px;"></span>
          <p class="question-radio" data-option="<%= question.option4 %>" data-id="<%= question.id %>"><input type="radio" name="option" style="margin-right:5px;" /><%= question.option4 %></p>
        </div>
        <span class="answer_<%= question.id %>" data-ans="<%= question.answer %>"></span>
      </div>
      <div class="col-sm-12">
        <div class="col-sm-2 link">
          <span><i class="fa fa-thumbs-up"></i> Likes</span>
        </div>
        <div class="col-sm-3 link">
          <span id="comment_<%= question.id %>"><i class="fa fa-comments"></i> Comments</span>
        </div>
        <div class="col-sm-7 link">
          <span><i class="fa fa-folder-open"></i> <%= company_name(question.company_id) %></span>
        </div>
      </div>
      <div id="comment_box_<%= question.id %>">
        <div class="row">
          <div class="col-sm-12">
            <div class="comment_box">
              <%= commontator_thread(question) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
<script type="text/javascript">
  $('#comment_box_<%= question.id %>').hide()
  $('#comment_<%= question.id %>').on("click", function(){
    if($('#comment_box_<%= question.id %>').is(':visible')){
      $("#comment_box_<%= question.id %>").slideUp();
      $('#comment_<%= question.id %> span').css("color", "#777");
    }
    else{
      $("#comment_box_<%= question.id %>").slideDown();
      $('#comment_<%= question.id %> span').css("color", "#000");
    }
  })
</script>
<% end %>

<script type="text/javascript">
  $('.question-radio').on('click', function(){
    user_ans = $(this).data('option');
    user_id = $(this).data('id');
    answer = $('.answer_'+user_id).data('ans')
    console.log(user_ans)
    console.log(answer)
    console.log('.answer_'+user_id)
    console.log(user_ans == answer)

    if(user_ans == answer)
    {
      $(this).prev().html('<i class="fa fa-check"></i>');
      $(".alert-success").fadeTo(2000, 500).slideUp(500);
    }
    else
    {
      $(this).prev().html('<i class="fa fa-times"></i>');
      $(".alert-danger").fadeTo(2000, 500).slideUp(500);
    }
  });
</script>